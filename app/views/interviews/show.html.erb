<div class="container mb-5">
  <div class="row">
    <div class="card">
      <div class="card-header">
        <h2>Entretien créé par <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h2
        >
      </div>
      <div class="card-body mb-3">
      <h3>Informations</h3>
        <p><strong>ℹ️ Date :</strong> <%= I18n.l(@time_slot.date) %></p>
        <p><strong>📍 Heure :</strong> <%= I18n.l(@time_slot.time) %></p>
        <p><strong>⭐️ Statut :</strong> <%= @time_slot.translated_status %></p>
        <p><strong>⭐️ Candidat.e :</strong> <%= @candidate.first_name %> <%= @candidate.last_name %></p>
      </div>
      <div class="card-header">
        <h2>Evaluation de l'entretien</h2>
      </div>
      <br>
      <% @interview.feedbacks.each do |feedback| %>
          <h6><em>Note et commentaire ajoutés par <u><%= @user.first_name %></u></em> <%= feedback.score_as_stars %></h6>
        <div class="card mb-5">
          <td><%= feedback.comment %></td>
        </div>
      <% end %>
    </div>
  </div>
</div>


<!-- Inclure la partialle du formulaire de feedback -->
<%= render 'feedbacks/feedback_form' %>
