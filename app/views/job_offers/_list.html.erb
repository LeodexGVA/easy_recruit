<div class="table" data-index-search-target="list">
  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th>Statut</th>
        <th>Entreprise</th>
        <th>Titre de l'annonce</th>
        <th>Description</th>
        <th>Type de contrat</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <%# Permet de cibler la recherche et quoi %>
      <div class="row">
        <% @job_offers.each do |job_offer| %>
          <tr>
            <td><%= job_offer.status %></td>
            <td><strong><%= job_offer.company.name %></strong></td>
            <td><a href="<%= job_offer_path(job_offer) %>"><p><%= job_offer.title %></p></a></td>
            <td><%= job_offer.description %></td>
            <td><%= job_offer.contract_type %></td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                  Actions
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="<%= edit_job_offer_path(job_offer) %>"><i class="bx bx-edit-alt me-1"></i> Modifier</a></li>
                  <li>
                    <%= link_to "Supprimer", job_offer_path(job_offer), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer l'offre?" }, class: "dropdown-item" %>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </div>
    </tbody>
  </table>
</div>
