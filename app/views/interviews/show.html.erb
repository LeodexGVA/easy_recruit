<div class="container my-5">
  <h1 class="mb-5">Entretien créé par <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h1>
  <div class="job_offer_details mb-5">
    <h2>Informations</h2>
    <p><strong>ℹ️ Date:</strong> <%= @time_slot.date %></p>
    <p><strong>📍 Time:</strong> <%= @time_slot.time %></p>
    <p><strong>⭐️ status:</strong> <%= @time_slot.status %></p>
  </div>
</div>
<!-- Afficher les feedbacks existants -->
<% @interview.feedbacks.each do |feedback| %>
  <div class="feedback">
    <%= feedback.comment %>
    <%= feedback.score %>
  </div>
<% end %>

<!-- Inclure la partialle du formulaire de feedback -->
<%= render 'feedbacks/feedback_form' %>
