<div class="container my-5">
  <h1 class="mb-5">Entretien de <%= @user.last_name.capitalize %></h1>
  <div class="job_offer_details mb-5">
    <h2>Informations</h2>
    <p><strong>ℹ️ Date:</strong> <%= @time_slot.date %></p>
    <p><strong>📍 Time:</strong> <%= @time_slot.time %></p>
    <p><strong>⭐️ status:</strong> <%= @time_slot.status %></p>
  </div>
  <div class="company_details mb-5">
    <h2>Feedback</h2>
    <p><strong>💼 Score:</strong> <% @feedbacks.each do |feedback|%>
    <%= feedback.score %>
      <% end %></p>
    <p><strong>ℹ️ Comment:</strong> <% @feedbacks.each do |feedback|%>
    <%= feedback.comment %>
      <% end %></p>
  </div>
</div>
